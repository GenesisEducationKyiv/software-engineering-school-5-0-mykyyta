{
  "id": null,
  "title": "Essential Microservices Monitoring",
  "tags": ["microservices", "essential", "monitoring"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Error Rate (%)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (service) (count_over_time({job=\"containerlogs\"} | json | level=\"error\" [1m])) / sum by (service) (count_over_time({job=\"containerlogs\"} | json | level != \"\" [1m])) * 100",
          "refId": "A",
          "legendFormat": "{{service}} Error Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "palette-classic"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "System Health Overview",
      "type": "stat",
      "targets": [
        {
          "expr": "sum by (service) (count_over_time({job=\"containerlogs\"} | json | level=\"info\" | msg=~\".*started.*|.*running.*\" [5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.service}",
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "green", "value": 2}
            ]
          },
          "mappings": [
            {
              "options": {
                "0": {"text": "DOWN", "color": "red"}
              },
              "type": "value"
            },
            {
              "options": {
                "from": 1,
                "to": 999,
                "result": {"text": "UP", "color": "green"}
              },
              "type": "range"
            }
          ]
        }
      },
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 8}
    },
    {
      "id": 3,
      "title": "Critical Errors (Last 15 minutes)",
      "type": "logs",
      "targets": [
        {
          "expr": "{job=\"containerlogs\"} | json | level=\"error\" | line_format \"{{.ts}} [{{.service}}] {{.msg}}\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 14}
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "refresh": "30s",
  "annotations": {
    "list": [
      {
        "name": "Critical Errors",
        "datasource": "Loki",
        "enable": true,
        "expr": "{job=\"containerlogs\"} | json | level=\"error\"",
        "iconColor": "red",
        "textFormat": "Error in {{service}}: {{msg}}"
      }
    ]
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "query": "label_values({job=\"containerlogs\"}, service)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      }
    ]
  }
}
